<Window x:Class="Assisment_Ahmed_Alaa.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assisment_Ahmed_Alaa"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" 
                BorderThickness="3"
                CornerRadius="5"
                Grid.Column="1"
                Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="Welcome Back!!"
                           FontSize="25"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"></TextBlock>
                
                <!--User Name stack panel-->
                <StackPanel Orientation="Horizontal"
                            Grid.Row="1">
                    <Label Content="Useranme"
                           FontSize="20"
                           FontWeight="Bold"
                            Height="40"
                           Width="120"
                           Margin="20,0">
                        
                    </Label>
                    <TextBox Width="200"
                             BorderBrush="Black"
                             BorderThickness="3"
                             Height="40"
                             x:Name="txtUserName">
                        
                    </TextBox>
                </StackPanel>
                <!--Password stack panel-->
                <StackPanel Orientation="Horizontal"
             Grid.Row="2">
                    <Label Content="Password"
                        FontSize="20"
                        FontWeight="Bold"
                        Height="40"
                        Width="120"
                        Margin="20,0"
                           >

                    </Label>
                    <PasswordBox Width="200"
                          BorderBrush="Black"
                          BorderThickness="3"
                          Height="40"
                          x:Name="txtpassword"
                                    >
                  </PasswordBox>
                </StackPanel>
                <Button
                    Grid.Row="4"
                    Content="Login"
                    Foreground="White"
                    Background="Black"
                    Width="120"
                    Height="40"
                    FontSize="20"
                    FontWeight="Bold"
                    Click="Login_btn"></Button>
            </Grid>
        </Border>
    </Grid>
</Window>
