<Window x:Class="Assisment_Ahmed_Alaa.Views.DoctorDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assisment_Ahmed_Alaa.Views"
        mc:Ignorable="d"
        Title="DoctorDashboard" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Margin="10,0"
                   Width="200"
                   HorizontalAlignment="Left"
                   Background="Gray"
                   Text="Scheduled/Cancelled"
                    TextAlignment="Center"
                   FontSize="20"
                   FontWeight="Bold">
            
        </TextBlock>
        <DataGrid 
         Name="canceled"
         Grid.Row="1" 
         Grid.ColumnSpan="2" 
         Margin="10"
         GridLinesVisibility="All"
         RowBackground="White"
         AlternatingRowBackground="Gray"
         HorizontalGridLinesBrush="Black"
         VerticalGridLinesBrush="Black"
         BorderBrush="Black"
         BorderThickness="3"
         HeadersVisibility="All"
            AutoGenerateColumns="False">

            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding PatId }" Width="*" Header="PatId"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding PatName}" Width="*" Header="PatName"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding DT}" Width="*" Header="DT"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Reas}" Width="*" Header="Reason"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Status}" Width="*" Header="Status"></DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Gray"></Setter>
                    <Setter Property="BorderBrush" Value="Gray"></Setter>
                    <Setter Property="BorderThickness" Value="1"></Setter>
                    <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                    <Setter Property="FontSize" Value="16"></Setter>
                    <Setter Property="FontWeight" Value="Bold"></Setter>
                </Style>
            </DataGrid.Resources>
        </DataGrid>
        <TextBlock 
              Grid.Row="3"
              Margin="10,0"
              Width="200"
              HorizontalAlignment="Left"
              Background="Gray"
              Text="Completed"
              TextAlignment="Center"
              FontSize="20"
              FontWeight="Bold">

        </TextBlock>
        <DataGrid 
           Grid.Row="4" 
           Grid.ColumnSpan="2" 
           Margin="10"
           GridLinesVisibility="All"
           RowBackground="White"
           AlternatingRowBackground="Gray"
           HorizontalGridLinesBrush="Black"
           VerticalGridLinesBrush="Black"
           BorderBrush="Black"
           BorderThickness="3"
           HeadersVisibility="All"
            Name="Comple"
            AutoGenerateColumns="False">

            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding PatId }" Width="*" Header="PatId"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding PatName}" Width="*" Header="PatName"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding DT}" Width="*" Header="DT"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Reas}" Width="*" Header="Reason"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Status}" Width="*" Header="Status"></DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Gray"></Setter>
                    <Setter Property="BorderBrush" Value="Gray"></Setter>
                    <Setter Property="BorderThickness" Value="1"></Setter>
                    <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                    <Setter Property="FontSize" Value="16"></Setter>
                    <Setter Property="FontWeight" Value="Bold"></Setter>
                </Style>
            </DataGrid.Resources>
        </DataGrid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions >
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal"
               
                Grid.Column="0">
                   <Label Content="Patd"
                    FontSize="20"
                    FontWeight="Bold"
                     Height="40"
                    Width="73"
                    Margin="20,0"
                 >

                </Label>
                <TextBox Width="43"
                  BorderBrush="Black"
                  BorderThickness="3"
                  Height="30"
                    Name ="txtPatid"
                  >
                 </TextBox>
            </StackPanel>

            <Button
              Content="Save"
              Grid.Column="3"
              Foreground="White"
              Background="Black"
              Width="120"
              Height="30"
              FontSize="20"
              FontWeight="Bold"
              Click="Save_btn" 
              VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal"
   
        Grid.Column="1">
                    <Label Content="Status"
            FontSize="20"
            FontWeight="Bold"
             Height="40"
            Width="73"
            Margin="20,0"
     >

         </Label>
          <ComboBox Width="133"
          BorderBrush="Black"
          BorderThickness="3"
          Height="30"
                    Name="status"
                    
          >
         <ComboBoxItem>Scheduled</ComboBoxItem>
         <ComboBoxItem>Cancelled</ComboBoxItem>
         <ComboBoxItem>Completed</ComboBoxItem>
         </ComboBox>
            </StackPanel>
        </Grid>
     
    </Grid>
</Window>
