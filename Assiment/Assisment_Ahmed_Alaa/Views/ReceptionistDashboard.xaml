<Window x:Class="Assisment_Ahmed_Alaa.Views.ReceptionistDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assisment_Ahmed_Alaa.Views"
        mc:Ignorable="d"
        Title="ReceptionistDashboard" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--Patient Name-->
        <StackPanel Orientation="Horizontal"
               Grid.Row="0">
            <Label Content="PatientName"
              FontSize="20"
              FontWeight="Bold"
               Height="40"
              Width="135"
              Margin="20,0">

            </Label>
            <TextBox Width="200"
                BorderBrush="Black"
                BorderThickness="3"
                Height="30"
                x:Name="txtPatName"
               >

            </TextBox>
        </StackPanel>
        <!--Patient Phone-->
        <StackPanel Orientation="Horizontal"
       Grid.Row="1">
            <Label Content="Phone"
          FontSize="20"
          FontWeight="Bold"
           Height="40"
          Width="135"
          Margin="20,0">

            </Label>
            <TextBox Width="200"
            BorderBrush="Black"
            BorderThickness="3"
            Height="30"
            x:Name="txtphone"

           >
            </TextBox>
        </StackPanel>
        <!--Patient DOB-->
        <StackPanel Orientation="Horizontal"
             Grid.Row="2">
            <Label Content="Age"
            FontSize="20"
            FontWeight="Bold"
             Height="40"
            Width="135"
            Margin="20,0"
            >

            </Label>
            <TextBox Width="200"
              BorderBrush="Black"
              BorderThickness="3"
              Height="30"
               x:Name="txtAge"
             >
            </TextBox>
        </StackPanel>
        <!--Patient Notes-->
        <StackPanel Orientation="Horizontal"
       Grid.Row="3">
            <Label Content="Notes"
      FontSize="20"
      FontWeight="Bold"
       Height="40"
      Width="135"
      Margin="20,0"
      >

            </Label>
            <TextBox Width="200"
        BorderBrush="Black"
        BorderThickness="3"
        Height="30"
        x:Name="txtNotes"
       >
            </TextBox>
        </StackPanel>
        <!--Doctor Id-->
        <StackPanel Orientation="Horizontal"
             Grid.Row="0"
                    Grid.Column="1">
            <Label Content="DocId"
            FontSize="20"
            FontWeight="Bold"
             Height="40"
            Width="135"
            Margin="20,0"
            >

            </Label>
            <TextBox Width="200"
              BorderBrush="Black"
              BorderThickness="3"
              Height="30"
              x:Name="txtDocId"
             >
            </TextBox>
        </StackPanel>
        <!--Pat Id-->
        <StackPanel Orientation="Horizontal"
                 Grid.Row="1"
                 Grid.Column="1">
            <Label Content="PatId"
         FontSize="20"
         FontWeight="Bold"
          Height="40"
         Width="135"
         Margin="20,0"
                 >

            </Label>
            <TextBox Width="200"
               BorderBrush="Black"
               BorderThickness="3"
               Height="30"
                x:Name="txtpatid" >
            </TextBox>
        </StackPanel>
        <!--Date Time-->
        <StackPanel Orientation="Horizontal"
           Grid.Row="2"
           Grid.Column="1">
            <Label Content="DateTime"
               FontSize="20"
               FontWeight="Bold"
                Height="40"
               Width="135"
               Margin="20,0"
           >

            </Label>
            <TextBox Width="200"
         BorderBrush="Black"
         BorderThickness="3"
         Height="30"
         x:Name="txtdattime"
           >
            </TextBox>
        </StackPanel>
        <!--Reason-->
        <StackPanel Orientation="Horizontal"
    Grid.Row="3"
    Grid.Column="1">
            <Label Content="Reason"
                    FontSize="20"
                    FontWeight="Bold"
                     Height="40"
                    Width="135"
                    Margin="20,0"
                 >

            </Label>
            <TextBox Width="200"
                  BorderBrush="Black"
                  BorderThickness="3"
                  Height="30"
                     x:Name="txtreason"
                  >
            </TextBox>
        </StackPanel>
        <!--Status-->
        <StackPanel Orientation="Horizontal"
            Grid.Row="4"
            Grid.Column="1">
            <Label Content="Status"
                FontSize="20"
                FontWeight="Bold"
                 Height="40"
                Width="135"
                Margin="20,0"
             >

            </Label>
            <ComboBox Width="200"
              BorderBrush="Black"
              BorderThickness="3"
              Height="30"
              Name="combostatus">
                <ComboBoxItem>Scheduled</ComboBoxItem>
                <ComboBoxItem>Cancelled</ComboBoxItem>
                <ComboBoxItem>Completed</ComboBoxItem>
            </ComboBox>
            
        </StackPanel>
        <!--Search-->
        <StackPanel Orientation="Horizontal"
         Grid.Row="4"
         Grid.Column="0">
            <Label Content="Search"
         FontSize="20"
         FontWeight="Bold"
          Height="40"
         Width="80"
         Margin="20,0"
      >

            </Label>
            <TextBox Width="200"
       BorderBrush="Black"
       BorderThickness="3"
       Height="30"
                     x:Name="txtsearch"
       >
            </TextBox>
            <Button Height="23"
                    Width="50"
                    Background="Black"
                    Margin="10,0"
                    Content="Search"
                    Foreground="White"
                    Click="Search_Btn"></Button>

        </StackPanel>

        <Grid Grid.Row="5" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button
             Content="Add"
             Grid.Column="0"
             Foreground="White"
             Background="Black"
             Width="120"
             Height="30"
             FontSize="20"
             FontWeight="Bold"
             Click="Add_btn" 
             VerticalAlignment="Center"/>

            <Button
            Content="Edit"
            Grid.Column="1"
            Foreground="White"
            Background="Black"
            Width="120"
            Height="30"
            FontSize="20"
            FontWeight="Bold"
            VerticalAlignment="Center"
                Click="Edit_btn"/>

            <Button
              Content="Clear"
              Grid.Column="3"
              Foreground="White"
              Background="Black"
              Width="120"
              Height="30"
              FontSize="20"
              FontWeight="Bold"
              Click="clear_btn" 
              VerticalAlignment="Center"/>
                    <Button
              Content="Delete"
              Grid.Column="2"
              Foreground="White"
              Background="Black"
              Width="120"
              Height="30"
              FontSize="20"
              FontWeight="Bold"
              Click="Delete_btn" 
              VerticalAlignment="Center"/>  
        </Grid>

        <DataGrid 
            Grid.Row="6" 
            Grid.ColumnSpan="2" 
            Margin="10"
            Name="Display"
            GridLinesVisibility="All"
            RowBackground="White"
            AlternatingRowBackground="Gray"
            HorizontalGridLinesBrush="Black"
            VerticalGridLinesBrush="Black"
            BorderBrush="Black"
            BorderThickness="3"
            HeadersVisibility="All" 
            SelectionChanged="Display_SelectionChanged"
            AutoGenerateColumns="False">

            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding PatId}" Width="70" Header="PatID"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding PatName}" Width="*" Header="PatName"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Phone}" Width="*" Header="Phone" ></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Age}" Width="*" Header="DOB"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Notes}" Width="*" Header="Notes"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding DocName}" Width="*" Header="DocName" ></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding DT}" Width="*" Header="DT"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Reas}" Width="*" Header="Reason"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Status}" Width="*" Header="Status"></DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Gray"></Setter>
                    <Setter Property="BorderBrush" Value="Gray"></Setter>
                    <Setter Property="BorderThickness" Value="1"></Setter>
                    <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                    <Setter Property="FontSize" Value="16"></Setter>
                    <Setter Property="FontWeight" Value="Bold"></Setter>
                </Style>
            </DataGrid.Resources>
        </DataGrid>
    </Grid>
</Window>
